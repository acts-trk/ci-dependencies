{
  "version": 3,
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default build",
      "binaryDir": "build",
      "installDir": "install",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20"
      }
    },
    {
      "name": "minimum",
      "displayName": "Default build with minimum dependency versions",
      "binaryDir": "build_min",
      "installDir": "install_min",
      "inherits": "default",
      "cacheVariables": {
        "USE_MINIMUM_VERSIONS": true
      }
    }
  ]
}
